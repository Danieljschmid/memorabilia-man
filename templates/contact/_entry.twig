{% extends "_layouts/main" %}

{% block main %}

{# Contact Form #}
    {# Error Message Macro #}
    {% macro errorList(errors) %}
        {% if errors %}
            
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">{{ error }}</div>
                {% endfor %}

        {% endif %}
    {% endmacro %}
    {% from _self import errorList %}
 

    {# Honeypot(anti-spam) Hide Input Style #}
    <style>
        input#honeypotInput {
            display: none;
        }
    </style>
  

    <div class="container col-12 col-sm-8 col-md-6">
        <form method="post" action="" accept-charset="UTF-8">
            {{ csrfInput() }}
            <input type="hidden" name="action" value="contact-form/send">
            {# Page Redirect After Form Submision #}
            {{ redirectInput('contact/thanks') }}

            {# Name Input #}
            <div class="form-group">
                <label for="from-name">Your Name</label>
                <input id="from-name" class="form-control" type="text" name="fromName" value="{{ message.fromName ?? '' }}">
                {{ message is defined and message ? errorList(message.getErrors('fromName')) }}
            </div>

            {# Email Input #}
            <div class="form-group">
                <label for="from-email">Your Email</label>
                <input id="from-email" class="form-control" type="email" name="fromEmail" value="{{ message.fromEmail ?? '' }}">
                {{ message is defined and message ? errorList(message.getErrors('fromEmail')) }}
            </div>
            
            {# Message Input #}
            <div class="form-group">
                <label for="message">Message</label>
                <textarea rows="3" id="message" class="form-control" name="message">{{ message.message ?? '' }}</textarea>
                {{ message is defined and message ? errorList(message.getErrors('message')) }}
            </div>

            {# Submit Button #}
            <input class="btn btn-outline-dark" type="submit" value="Send">

            {# Hidden Honeypot(anti-spam) Input #}
            <input id="honeypotInput" name="honeypotInput" type="text">
        </form>
    </div>
{# End Contact Form #}

